{# empty Twig template #}
{% extends "layouts/template.html.twig" %}
{% block title %}{{ parent() }} - Contact{% endblock %}

{% block body %}

    <div id="content">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header"><span class="fa fa-envelope fw"></span> Contact{{ loader()|raw }}</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <div class="row">
            <div class="col-md-12">
                <h4>
                    Cette applicationest bas√© sur le framework <abbr title="NtoProg Framework">NTP</abbr> version 1.3.0
                </h4>
                <blockquote>
                    <p>
                        ...
                    </p>
                </blockquote>

                <h3>Nous joindre</h3>

                <blockquote>
                    <p>
                        Vous pouvez nous joindre aux moyens suivants :<br />

                        <span class="fa fa-phone fa-fw"></span> : +243 822 178 836<br />
                        <span class="fa fa-envelope fa-fw"></span> : contact@ntoprog.org<br />
                        <span class="fa fa-globe fa-fw"></span> : <a href="https://fw.ntoprog.org/">https://fw.ntoprog.org/</a>
                    </p>
                </blockquote>


                <div class="row">
                    <div class="list-group">
                        <div class="list-group-item list-group-item-heading">
                            <h4>Envoyez-nous un mail</h4>
                        </div>
                        <div class="list-group-item list-group-item-heading">
                            <form class="form-horizontal" method="post" role="form" action="{{ url('main_contact') }}">
                                <div class="form-group">
                                    <label for="fieldName" class="col-sm-2 control-label">Objet du message</label>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control" id="fieldName" name="name" placeholder="objet du message" required />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="fieldName" class="col-sm-2 control-label">Message</label>
                                    <div class="col-sm-8">
                                        <textarea required class="form-control" id="fieldMessage" name="message" placeholder="votre message..." rows="6"></textarea>
                                        <input type="hidden" name="token" value="{{ _token }}" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <button class="btn btn-primary">Envoyer</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}