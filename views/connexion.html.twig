{# empty Twig template #}
{% extends "layouts/template.html.twig" %}
{% block title %}Connexion - {{ parent() }}{% endblock %}

{% block body %}
    <div id="loginbox" style="margin-top:90px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">

        {% if session.hasFlash %}
            <p class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <span class="fa fa-exclamation-triangle fa-fw"></span>  {{ session.getFlash }}
            </p>
        {% endif %}
        <div class="panel panel-primary" >
            <div class="panel-heading">
                <div class="pull-right" style="font-size: 80%;"><a href="#">Mot de passe oublié?</a></div>
                <div class="panel-title"><span class="fa fa-lock fa-fw"></span> Connectez-vous</div>
            </div>     

            <div style="padding-top:30px" class="panel-body" >

                <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

                <form id="loginform" method="post" action="{{url('main_connect')}}" class="form-horizontal" role="form">

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input id="login-username" autofocus autocomplete="off" type="text" class="form-control" name="username" value="{{ _last_login }}" placeholder="nom d'utilisateur or email">
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input id="login-password" type="password" class="form-control" name="password" placeholder="mode de passe">
                    </div>

                    <div class="input-group">
                        <div class="checkbox">
                            <label>
                                <input id="login-remember" type="checkbox" name="remember" value="1"> Se souvenir de moi
                                <input type="hidden" name="{{ name }}" value="{{ _token }}" />
                            </label>
                        </div>
                    </div>


                    <div style="margin-top:10px" class="form-group">
                        <!-- Button -->

                        <div class="col-sm-12 controls">
                            <button id="btn-login" class="btn btn-success"><span class="fa fa-sign-in fa-fw"></span>  Connexion  </button>
                        </div>
                    </div>
                    <hr />
                    <div class="form-group">
                        <div class="col-md-12 control">
                            <div style="font-size:85%" >
                                Si vous avez des problèmes de connexion, veuillez contacter l'administrateur.
                            </div>
                        </div>
                    </div>    
                </form>
            </div>                     
        </div>  
    </div>

{% endblock %}